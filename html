  <div class="wrap">
    <div class="hero">
      <div class="card">
        <h1>Love Them ‚ù§Ô∏è</h1>
        <p>Send a little heart, a short note, or keep this page as a tiny love shrine ‚Äî perfect for surprising someone special.</p>

        <div class="message" id="messageArea">Dear <strong id="toName">Someone</strong>,<br><br>
          You make ordinary moments feel magical. Thank you for being you ‚Äî today and every day.
        </div>

        <div style="margin-top:18px; display:flex; gap:10px; align-items:center;">
          <button class="love-btn" id="loveBtn" title="Send heart">üíì Send Heart</button>
          <div class="controls">
            <button class="btn-ghost" id="editBtn">Edit message</button>
            <button class="btn-ghost" id="shareBtn">Copy link</button>
          </div>
        </div>

        <div style="margin-top:12px; font-size:13px; color:var(--muted)">Tip: Click the pink area (photo) to change the name and message.</div>
      </div>
    </div>

    <aside class="aside">
      <div class="photo card" id="photo">Your Love</div>
      <div class="card" style="padding:12px">
        <div class="name" id="displayName">Someone Special</div>
        <div class="sub" id="displaySub">Beloved ‚Ä¢ Always</div>
      </div>
    </aside>

    <footer>Made with ‚ô• ‚Äî Customize the text, colors or add photos. Enjoy!</footer>
    <div class="sparkle"></div>
  </div>

  <script>
    // small interactive behaviors: change name/message, spawn hearts, copy share text
    const photo = document.getElementById('photo');
    const toName = document.getElementById('toName');
    const displayName = document.getElementById('displayName');
    const displaySub = document.getElementById('displaySub');
    const messageArea = document.getElementById('messageArea');
    const loveBtn = document.getElementById('loveBtn');
    const editBtn = document.getElementById('editBtn');
    const shareBtn = document.getElementById('shareBtn');

    function ask(promptText, defaultVal){
      const t = prompt(promptText, defaultVal || '');
      return t ? t.trim() : null;
    }

    photo.addEventListener('click', ()=>{
      const name = ask('Enter the name to show:', displayName.textContent) || displayName.textContent;
      const note = ask('Write a short message:', messageArea.textContent.replace(/\n/g,' ')) || messageArea.textContent;
      displayName.textContent = name;
      toName.textContent = name.split(' ')[0] || name;
      messageArea.innerHTML = note.replace(/\n/g,'<br>');
    });

    editBtn.addEventListener('click', ()=> photo.click());

    function spawnHeart(x,y){
      const heart = document.createElement('div');
      heart.className = 'heart';
      heart.style.left = x + 'px';
      heart.style.top = y + 'px';
      // random size
      const s = 18 + Math.random()*36;
      heart.style.width = s + 'px';
      heart.style.height = s + 'px';
      // color variety
      const fill = Math.random() > 0.5 ? '#ff5ca8' : '#ff7b9a';
      heart.innerHTML = `<svg viewBox="0 0 24 24" fill="${fill}" xmlns="http://www.w3.org/2000/svg"><path d="M12 21s-7.5-4.35-9.07-7.01C.96 10.96 4.39 6 8.8 6c2.27 0 3.95 1.03 3.95 1.03S14.93 6 17.2 6C21.61 6 25.04 10.96 21.07 13.99 19.5 16.65 12 21 12 21z"/></svg>`;
      document.body.appendChild(heart);
      setTimeout(()=> heart.remove(), 1600);
    }

    loveBtn.addEventListener('click', (e)=>{
      // spawn 6 hearts around the button
      const rect = e.currentTarget.getBoundingClientRect();
      for(let i=0;i<6;i++){
        const rx = rect.left + rect.width/2 + (Math.random()-0.5)*120;
        const ry = rect.top + (Math.random()-0.2)*40;
        setTimeout(()=> spawnHeart(rx, ry), i*80);
      }
      // also flash a short message
      const old = loveBtn.textContent;
      loveBtn.textContent = 'Sent ‚ù§Ô∏è';
      setTimeout(()=> loveBtn.textContent = old, 1200);
    });

    shareBtn.addEventListener('click', ()=>{
      const text = `A little love note for ${displayName.textContent}:\n\n${messageArea.textContent}\n\n‚Äî Shared from Love Them page`;
      navigator.clipboard?.writeText(text).then(()=>{
        shareBtn.textContent = 'Copied!';
        setTimeout(()=> shareBtn.textContent = 'Copy link', 1200);
      }).catch(()=>{
        alert('Copy failed ‚Äî you can manually select the message and copy.');
      });
    });

    // optional: click anywhere to spawn tiny hearts for fun
    document.body.addEventListener('dblclick', (e)=> spawnHeart(e.clientX, e.clientY));
  </script>
</body>
